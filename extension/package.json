{
  "name": "angular-chrome-extension",
  "version": "1.0.0",
  "author": "Lars Kniep",
  "description": "Angular Chrome Extension Template",
  "scripts": {
    "ng": "ng",
    "start": "npm run watch",
    "build:angular": "ng build --configuration development",
    "build:angular-production": "ng build --configuration production",
    "watch:angular": "ng build --watch --configuration development --delete-output-path false --source-map=true --plugin ~angular/sourcemaps-plugin.js",
    "build:chrome": "webpack --config chrome/webpack.config.js",
    "build:chrome-production": "webpack --config chrome/webpack.config.prod.js",
    "watch:chrome": "webpack --config chrome/webpack.config.js -w",
    "build": "npm run clean && npm run build:angular && npm run build:chrome && npm run build:css",
    "build:production": "npm run build:angular-production && npm run build:chrome-production && npm run build:css-production && npm run pack",
    "watch": "npm run clean && npm-run-all --parallel watch:*",
    "clean": "rimraf angular/dist",
    "pack": "cd angular/dist && bestzip ../../extension-build.zip *",
    "watch:css": "npx tailwindcss -i ./angular/src/styles.scss -o ./angular/dist/styles.css --watch",
    "build:css": "npx tailwindcss -i ./angular/src/styles.scss -o ./angular/dist/styles.css",
    "build:css-production": "npx tailwindcss -i ./angular/src/styles.scss -o ./angular/dist/styles.css --minify",
    "eslint": "eslint . --max-warnings=0 --ext .ts",
    "eslint:fix": "npm run eslint -- --fix"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.1.1",
    "@angular/common": "^15.1.1",
    "@angular/compiler": "^15.1.1",
    "@angular/core": "^15.1.1",
    "@angular/forms": "^15.1.1",
    "@angular/platform-browser": "^15.1.1",
    "@angular/platform-browser-dynamic": "^15.1.1",
    "@angular/router": "^15.1.1",
    "ngx-build-plus": "^15.0.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@angular-devkit/build-angular": "^15.1.2",
    "@angular/cli": "~15.1.2",
    "@angular/compiler-cli": "^15.1.1",
    "@types/chrome": "^0.0.239",
    "bestzip": "^2.2.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "npm-run-all": "^4.1.2",
    "prettier": "2.8.8",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.2",
    "ts-loader": "^9.4.4",
    "typescript": "~4.9.5",
    "webpack-cli": "^5.1.4"
  }
}
